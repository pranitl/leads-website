---
const {
  label = 'Get My Quote',
  href = '#lead-form',
} = Astro.props;
---

<div class="pointer-events-none fixed inset-x-0 bottom-0 z-40 md:hidden">
  <div class="pointer-events-auto border-t-2 border-brown-forest/20 bg-cream-light/95 px-6 pb-[calc(env(safe-area-inset-bottom)+1.25rem)] pt-4 shadow-[0_-12px_40px_rgba(92,64,51,0.15)] backdrop-blur">
    <a class="btn-cta w-full" href={href}>
      {label}
    </a>
  </div>
</div>
