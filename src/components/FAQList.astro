---
type FAQ = { q: string; a: string };
const { items = [] } = Astro.props as { items: FAQ[] };
---

{items.length ? (
  <div class="space-y-6">
    <h3 class="font-heading text-2xl font-semibold text-brown-dark">Frequently asked questions</h3>
    <ul class="space-y-4">
      {items.map((faq, index) => (
        <li class="card-rustic">
          <details class="group" open={index === 0}>
            <summary class="flex cursor-pointer items-center justify-between gap-4 bg-brown-forest px-5 py-4 text-cream transition hover:bg-brown-forest/90">
              <h4 class="font-heading text-base font-semibold">{faq.q}</h4>
              <svg viewBox="0 0 24 24" class="h-5 w-5 flex-shrink-0 fill-current transition-transform group-open:rotate-180" aria-hidden="true">
                <path d="M7 10l5 5 5-5H7z"/>
              </svg>
            </summary>
            <div class="bg-cream-light px-5 py-4">
              <p class="text-sm text-brown-body">{faq.a}</p>
            </div>
          </details>
        </li>
      ))}
    </ul>
  </div>
) : null}
