---
import type { CollectionEntry } from 'astro:content';

type Post = Pick<CollectionEntry<'posts'>, 'data' | 'slug'>;

const { posts = [] } = Astro.props as { posts: Post[] };
---

<section class="space-y-6">
  <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brown-forest">Insights</p>
      <h2 class="font-heading text-3xl font-semibold text-brown-dark">Guides for smarter project planning</h2>
    </div>
    <a class="btn-outline" href="/blog">View all articles</a>
  </div>
  <div class="grid gap-5 md:grid-cols-3">
    {posts.map((post) => (
      <article class="group flex h-full flex-col gap-3 rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-5 shadow-hard-light transition hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-hard-light-hover">
        <span class="inline-flex w-fit items-center rounded-full border border-brown-forest/20 bg-cream px-3 py-1 text-xs font-semibold uppercase tracking-wide text-brown-muted">
          {new Date(post.data.publishedAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric' })}
        </span>
        <a class="font-heading text-lg font-semibold text-brown-dark hover:text-oxide" href={`/blog/${post.slug}`}>
          {post.data.title}
        </a>
        <p class="text-sm text-brown-body">{post.data.excerpt}</p>
        <a class="mt-auto inline-flex items-center text-sm font-semibold text-oxide hover:text-oxide-hover" href={`/blog/${post.slug}`}>
          Read guide
          <svg viewBox="0 0 24 24" class="ml-1 h-4 w-4 fill-current" aria-hidden="true">
            <path d="M5 12a1 1 0 0 1 1-1h10.586l-3.293-3.293a1 1 0 0 1 1.414-1.414l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L16.586 13H6a1 1 0 0 1-1-1Z" />
          </svg>
        </a>
      </article>
    ))}
  </div>
</section>
