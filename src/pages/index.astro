---
import Layout from '../layouts/Layout.astro';
import LeadCaptureSection from '../components/LeadCaptureSection.astro';
import ServiceGrid from '../components/ServiceGrid.astro';
import ProcessSteps from '../components/ProcessSteps.astro';
import TrustSignals from '../components/TrustSignals.astro';
import InsightsPreview from '../components/InsightsPreview.astro';
import StickyCTA from '../components/StickyCTA.astro';
import { getCollection } from 'astro:content';
import { toLeadFormServiceOptions } from '../lib/services';
import { orderLocationsByPriority } from '../lib/locations';

const servicesCollection = await getCollection('services');
const services = servicesCollection.map((entry) => ({
  slug: entry.data.slug,
  name: entry.data.name,
  summary: entry.data.summary,
  icon: entry.data.icon,
  subservices: entry.data.subservices ?? [],
}));
const leadFormServices = toLeadFormServiceOptions(servicesCollection);

const latestPosts = (await getCollection('posts'))
  .sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime())
  .slice(0, 3);

const locationEntries = await getCollection('locations');
const locations = orderLocationsByPriority(locationEntries).slice(0, 6);

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'Austin Home Renovation Hub',
  url: Astro.site?.href ?? 'https://example.com',
  potentialAction: {
    '@type': 'SearchAction',
    target: `${Astro.site?.href ?? 'https://example.com'}/services?query={search_term_string}`,
    'query-input': 'required name=search_term_string',
  },
};
---

<Layout title="Austin Reno Hub | Trusted Local Pros for Home Services" structuredData={structuredData}>
  <LeadCaptureSection
    services={leadFormServices}
    sectionClass="overflow-hidden bg-cream border-b border-brown-forest/10"
    leftColumnClass="text-brown-dark"
  >
    <!-- Trust Badge -->
    <div class="inline-flex items-center gap-2 rounded-full border-2 border-brown-forest/20 bg-cream-light px-4 py-2 shadow-hard-sm">
      <svg viewBox="0 0 24 24" class="h-5 w-5 fill-current text-oxide" aria-hidden="true">
        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
      </svg>
      <span class="text-xs font-semibold uppercase tracking-wide text-brown-forest">Texas Native Plants Specialist</span>
    </div>
    
    <h1 class="font-heading text-4xl font-semibold leading-tight text-brown-dark md:text-5xl">
      Trusted Local Pros for Hardscapes, Closets & Xeriscaping
    </h1>
    <p class="max-w-2xl text-base text-brown-body">
      Tired of contacting contractor after contractor with no response? Tell us once—our concierge team lines up vetted local pros who compete to earn your project.
    </p>
    <p class="max-w-2xl text-sm text-brown-muted">
      Serving Austin, Cedar Park, Leander & Dripping Springs. Expect curated quotes within 24 hours.
    </p>
    <ul class="grid gap-4 sm:grid-cols-2">
      <li class="stat-card-rustic">
        <p class="font-heading text-2xl font-semibold text-brown-forest">150+</p>
        <p class="text-sm text-brown-body">Verified artisans across landscaping and interior build-outs.</p>
      </li>
      <li class="stat-card-rustic">
        <p class="font-heading text-2xl font-semibold text-brown-forest">4.9 / 5</p>
        <p class="text-sm text-brown-body">Average homeowner satisfaction rating.</p>
      </li>
    </ul>
    <div class="grid gap-4 sm:grid-cols-3 sm:items-end">
      <img
        src="/images/placeholders/home-hero-1.svg"
        alt="Project planning sketch"
        class="h-36 w-full rounded-2xl border-2 border-brown-forest/20 bg-cream-light object-cover shadow-lg shadow-black/20"
        loading="lazy"
      />
      <img
        src="/images/placeholders/home-hero-2.svg"
        alt="Outdoor living concept"
        class="hidden h-40 w-full rounded-2xl border-2 border-brown-forest/20 bg-cream-light object-cover shadow-lg shadow-black/20 sm:block"
        loading="lazy"
      />
      <div class="rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-4 text-sm text-brown-body backdrop-blur">
        <p class="font-heading text-xl font-semibold text-cream">“They brought the right pros to us.”</p>
        <p class="mt-2 text-xs text-brown-muted">— Homeowner in Austin</p>
        <p class="mt-3 text-xs text-brown-muted">
          Real stories coming soon. For now, expect concierge guidance and quotes without the chase.
        </p>
      </div>
    </div>
  </LeadCaptureSection>

  <section class="container space-y-16 py-16">
    <ServiceGrid services={services} />
    <ProcessSteps />
    <TrustSignals />

    <section class="space-y-6">
      <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
        <div>
          <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brown-forest">Service areas</p>
          <h2 class="font-heading text-3xl font-semibold text-brown-dark">Service areas we currently serve</h2>
        </div>
        <a class="btn-outline" href="/locations">View all locations</a>
      </div>
      <div class="grid gap-5 md:grid-cols-3">
        {locations.map((location) => (
          <article class="rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-5 shadow-hard-light">
            <p class="text-xs font-semibold uppercase tracking-wide text-brown-forest">{location.data.state}</p>
            <h3 class="mt-1 font-heading text-xl font-semibold text-brown-dark">{location.data.city}</h3>
            <p class="mt-3 text-sm text-brown-body">{location.data.intro}</p>
            {location.data.neighborhoods?.length ? (
              <div class="mt-4 text-xs uppercase tracking-wide text-brown-muted">
                Key areas: {location.data.neighborhoods.slice(0, 3).join(', ')}
              </div>
            ) : null}
            <a class="mt-4 inline-flex items-center text-sm font-semibold text-oxide hover:text-oxide-hover" href={`/locations/${location.data.slug}`}>
              Explore {location.data.city}
              <svg viewBox="0 0 24 24" class="ml-1 h-4 w-4 fill-current" aria-hidden="true">
                <path d="M5 12a1 1 0 0 1 1-1h10.586l-3.293-3.293a1 1 0 0 1 1.414-1.414l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L16.586 13H6a1 1 0 0 1-1-1Z" />
              </svg>
            </a>
          </article>
        ))}
      </div>
    </section>

    <InsightsPreview posts={latestPosts} />
  </section>

  <StickyCTA />
</Layout>
