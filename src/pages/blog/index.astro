---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());

const structuredData = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: 'Insights',
  url: new URL('/blog', Astro.url).href,
};
---
<Layout title="Insights | Austin Home Renovation Hub" description="Guides on cost planning, sustainable materials, and lead gen tactics for home renovation services." structuredData={structuredData}>
  <section class="border-b border-brown-forest/10 bg-cream">
    <div class="container space-y-6 py-16">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brown-forest">Insights</p>
      <h1 class="font-heading text-4xl font-semibold text-brown-dark">Research-backed guides for smart project planning</h1>
      <p class="max-w-2xl text-sm text-brown-body">
        Dive into cost benchmarks, design trends, and marketing tactics powering modern home service brands.
      </p>
    </div>
  </section>

  <section class="container space-y-8 py-16">
    <div class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => (
        <article class="group rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-5 shadow-hard-light transition hover:-translate-x-0.5 hover:-translate-y-0.5 hover:shadow-hard-light-hover">
          <span class="inline-flex w-fit items-center rounded-full border border-brown-forest/20 bg-cream px-3 py-1 text-xs font-semibold uppercase tracking-wide text-brown-muted">
            {new Date(post.data.publishedAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric', year: 'numeric' })}
          </span>
          <a class="mt-3 block font-heading text-xl font-semibold text-brown-dark hover:text-oxide" href={`/blog/${post.slug}`}>
            {post.data.title}
          </a>
          <p class="mt-3 text-sm text-brown-body">{post.data.excerpt}</p>
          <a class="mt-4 inline-flex items-center text-sm font-semibold text-oxide hover:text-oxide-hover" href={`/blog/${post.slug}`}>
            Read guide
            <svg viewBox="0 0 24 24" class="ml-1 h-4 w-4 fill-current" aria-hidden="true">
              <path d="M5 12a1 1 0 0 1 1-1h10.586l-3.293-3.293a1 1 0 0 1 1.414-1.414l5 5a1 1 0 0 1 0 1.414l-5 5a1 1 0 1 1-1.414-1.414L16.586 13H6a1 1 0 0 1-1-1Z" />
            </svg>
          </a>
        </article>
      ))}
    </div>
  </section>
</Layout>
