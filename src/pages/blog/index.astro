---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('posts')).sort((a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime());
---

<Layout title="Insights | Crafted Niche Leads" description="Guides on cost planning, sustainable materials, and lead gen tactics for niche home services.">
  <section class="border-b border-neutral-200 bg-neutral-50/70">
    <div class="container space-y-6 py-16">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brand-600">Insights</p>
      <h1 class="font-heading text-4xl font-semibold text-neutral-900">Research-backed guides for smart project planning</h1>
      <p class="max-w-2xl text-sm text-neutral-600">
        Dive into cost benchmarks, design trends, and marketing tactics powering modern home service brands.
      </p>
    </div>
  </section>

  <section class="container space-y-8 py-16">
    <div class="grid gap-6 md:grid-cols-3">
      {posts.map((post) => (
        <article class="rounded-2xl border border-neutral-200 bg-white/90 p-5 shadow-card">
          <p class="text-xs font-semibold uppercase tracking-wide text-neutral-500">{new Date(post.data.publishedAt).toLocaleDateString()}</p>
          <a class="mt-2 block font-heading text-xl font-semibold text-neutral-900 hover:text-brand-600" href={`/blog/${post.slug}`}>
            {post.data.title}
          </a>
          <p class="mt-3 text-sm text-neutral-600">{post.data.excerpt}</p>
        </article>
      ))}
    </div>
  </section>
</Layout>
