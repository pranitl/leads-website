---
import Layout from '../layouts/Layout.astro';
import LeadCaptureSection from '../components/LeadCaptureSection.astro';
import { getCollection } from 'astro:content';
import { toLeadFormServiceOptions } from '../lib/services';

const servicesCollection = await getCollection('services');
const leadFormServices = toLeadFormServiceOptions(servicesCollection);
---

<Layout title="Contact | Austin Home Renovation Hub" description="Reach our concierge team for partnerships, press, or project support.">
  <section class="border-b border-brown-forest/10 bg-cream">
    <div class="container space-y-6 py-16">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brown-forest">Contact</p>
      <h1 class="font-heading text-4xl font-semibold text-brown-dark">Start Your Conversation</h1>
      <p class="max-w-2xl text-sm text-brown-body">
        Skip the cold calls. Tell us about your vision, and weâ€™ll connect you with the right team. Expect a response within one business day.
      </p>
    </div>
  </section>

  <LeadCaptureSection
    services={leadFormServices}
    sectionClass="bg-cream"
    containerClass="gap-12 py-16 lg:grid-cols-[1.1fr,0.9fr]"
    leftColumnClass="space-y-8"
  >
    <div class="rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-6 shadow-hard-light">
      <h2 class="font-heading text-2xl font-semibold text-brown-dark">General inquiries</h2>
      <p class="mt-2 text-sm text-brown-body">
        Email <a class="text-oxide hover:text-oxide-hover" href="mailto:hello@austinhomereno.com">hello@austinhomereno.com</a>. A concierge will respond within one business day.
      </p>
    </div>
    <div class="rounded-2xl border-2 border-brown-forest/20 bg-cream-light p-6 shadow-hard-light">
      <h2 class="font-heading text-2xl font-semibold text-brown-dark">Partnerships & media</h2>
      <p class="mt-2 text-sm text-brown-body">
        For suppliers, agencies, or press, email <a class="text-oxide hover:text-oxide-hover" href="mailto:partners@austinhomereno.com">partners@austinhomereno.com</a>.
      </p>
    </div>
  </LeadCaptureSection>
</Layout>
