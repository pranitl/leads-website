---
import Layout from '../layouts/Layout.astro';
import LeadCaptureSection from '../components/LeadCaptureSection.astro';
import { getCollection } from 'astro:content';
import { toLeadFormServiceOptions } from '../lib/services';

const servicesCollection = await getCollection('services');
const leadFormServices = toLeadFormServiceOptions(servicesCollection);
---

<Layout title="Contact | Austin Home Renovation Hub" description="Reach our concierge team for partnerships, press, or project support.">
  <section class="border-b border-neutral-200 bg-neutral-50/70">
    <div class="container space-y-6 py-16">
      <p class="text-xs font-semibold uppercase tracking-[0.25em] text-brand-600">Contact</p>
      <h1 class="font-heading text-4xl font-semibold text-neutral-900">Let’s talk about your next project</h1>
      <p class="max-w-2xl text-sm text-neutral-600">
        Whether you’re a homeowner, service pro, or partner, we’re here to guide you through the process. Expect a response within one business day.
      </p>
    </div>
  </section>

  <LeadCaptureSection
    services={leadFormServices}
    sectionClass="bg-transparent"
    containerClass="gap-12 py-16 lg:grid-cols-[1.1fr,0.9fr]"
    leftColumnClass="space-y-8"
    formClassName="shadow-card"
  >
    <div class="rounded-2xl border border-neutral-200 bg-white/90 p-6 shadow-card">
      <h2 class="font-heading text-2xl font-semibold text-neutral-900">General inquiries</h2>
      <p class="mt-2 text-sm text-neutral-600">
        Email <a class="text-brand-600 hover:text-brand-700" href="mailto:hello@craftedniche.com">hello@craftedniche.com</a>. A concierge will respond within one business day.
      </p>
    </div>
    <div class="rounded-2xl border border-neutral-200 bg-white/90 p-6 shadow-card">
      <h2 class="font-heading text-2xl font-semibold text-neutral-900">Partnerships & media</h2>
      <p class="mt-2 text-sm text-neutral-600">
        For suppliers, agencies, or press, email <a class="text-brand-600 hover:text-brand-700" href="mailto:partners@craftedniche.com">partners@craftedniche.com</a>.
      </p>
    </div>
  </LeadCaptureSection>
</Layout>
